<div class='container'>
  <h1 class='text-center p-3'>Cocktails</h1>
  <div class='text-center'>
    <%= link_to 'Add Cocktail', new_cocktail_path, class: 'btn btn-primary' %>
  <% @cocktails.each do |cocktail| %>
    <div class='card' style='width: 400px'><%=  %>
      <img class='card-img-top' src='https://www.pexels.com/search/cocktail/' alt: cocktail.name, style=' width: 100%'>
      <div class='card-body'>
        <h4 class='card-title'><%= cocktail.name %></h4>
        <div class='text-center'>
          <%= link_to 'Details', cocktail_path(cocktail), class: 'btn btn-primary stretched-link' %>
        </div>
      </div>
    </div>
  <% end %>
  <br>
</div>
